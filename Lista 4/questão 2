#include <iostream>

int main() {
    // Padrão 1: Linhas de asteriscos crescentes
    std::cout << "Padrão 1:" << std::endl;
    for (int linha = 1; linha <= 5; ++linha) {
        for (int coluna = 1; coluna <= linha; ++coluna) {
            std::cout << '*';
        }
        std::cout << '\n';
    }

    std::cout << std::endl;

    // Padrão 2: Linhas de asteriscos decrescentes
    std::cout << "Padrão 2:" << std::endl;
    for (int linha = 5; linha >= 1; --linha) {
        for (int coluna = 1; coluna <= linha; ++coluna) {
            std::cout << '*';
        }
        std::cout << '\n';
    }

    std::cout << std::endl;

    // Padrão 3: Triângulo retângulo invertido
    std::cout << "Padrão 3:" << std::endl;
    for (int linha = 1; linha <= 5; ++linha) {
        for (int espaco = 1; espaco < linha; ++espaco) {
            std::cout << ' ';
        }
        for (int coluna = linha; coluna <= 5; ++coluna) {
            std::cout << '*';
        }
        std::cout << '\n';
    }

    std::cout << std::endl;

    // Padrão 4: Triângulo retângulo
    std::cout << "Padrão 4:" << std::endl;
    for (int linha = 1; linha <= 5; ++linha) {
        for (int coluna = 1; coluna <= linha; ++coluna) {
            std::cout << '*';
        }
        std::cout << '\n';
    }

    return 0;
}
